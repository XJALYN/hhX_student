/* pages/orderPay/orderPay.wxss */
.header-container{
  height: 208rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.1); 
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  width: calc(100% - 60rpx);
}
.header-container__title{
  font-size: 24rpx;
  color: #9B9B9B;
}

.header-container__account{
  font-size: 36rpx;
  color: black;
}

.pay-way-container{
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  width: calc(100% - 60rpx);
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.1); 
}

.pay-way-item{
  width: 100%;
  height: 60px;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgb(247,247,247);
}

.pay-way-item__icon{
  width: 48rpx;
  height: 48rpx;
  margin-left: 30rpx;
}

.pay-way-item__title{
  margin-left: 10px;
  color: #000000;
  font-size: 32rpx;
  font-weight:500;
}

.pay-way-item__title--disabled{
  color: rgb(200,200,200);
}

.pay-way-item__status-icon{
  margin-right: 10px;
}

.btn-pay{
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  border-radius:0px;
}

.pay-btn{
  position: fixed;
  display: flex;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  width: calc(100% - 60rpx);
  height: 104rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 10rpx;
}

.pay-btn__title{
  margin-top: 10rpx;
  font-size: 28rpx;
  margin-right: 10px;
}

.pay-btn__accoutn{
  font-size: 48rpx;
}

