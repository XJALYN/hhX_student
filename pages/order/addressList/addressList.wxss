/* pages/addressList/addressList.wxss */
@import "./cell/index";

.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-default{
  width: 15px;
  height: 15px;
  margin-left: 5px;
}
.address-container{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.address-container-disable{
  opacity: 0.3;
  
}
.address{
  margin-left: 5px;
  font-size: 12px;
  color: rgb(150,150,150);
  flex: 1;
}
.base-info{
  margin-left: 2px;
  font-size: 15px;
  color: rgb(70,70,70);
}
.mid{
  display: flex;
  flex-direction: column;
  flex:1;
}
.edit-icon{
  width: 24px;
  height: 24px;
  margin-right: 10px;
}
.delete-icon{
  width: 20px;
  height: 20px;
  margin-right: 10px;
}
.btn-add{
  margin-top: 30px;
  width: 60%;
  border-radius: 20px;
  height: 40px;
  font-size: 15px;
  line-height: 40px;
  text-align: center;
  color: white;
}
.btn-add-container{
  display: flex;
  position: fixed;
  bottom: 0px;
  height: 141rpx;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #D8D8D8;
  left: 0px;
  right: 0px;
}
.add-icon{
  width: 40rpx;
  height: 40rpx;
  margin-left: 24rpx;
}

.add-title{
  margin-left: 10px;
  color: #FF6D10;
  font-size: 36rpx;
  
}
.btn-add:active{
  opacity: 0.7;
  font-size: 15px;
}
