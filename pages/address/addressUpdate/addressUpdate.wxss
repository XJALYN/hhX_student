/* pages/address/address.wxss */

.address {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item {
  margin-top: 10px;
  width: 100%;
  height: 50px;
  align-items: center;
  display: flex;
  font-size: 15px;
  background: white;
}
.item-sex{
  width: 102rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin-left: 34rpx;
  border-radius: 4rpx;
  color: #9B9B9B;
  border:1px solid #9B9B9B;
}
.item-sex--active{
  color: #FF6D10;
  border:1px solid #FF6D10;
}

.item .title {
  margin-left: 34rpx;
  color: #030303;
  min-width: 133rpx;
}

input {
  margin-left: 24rpx;
}

.arrow_right {
  width: 20px;
  height: 20px;
  margin-right: 30rpx;
}

.item .value {
  margin-right: 10x;
  margin-left: 15px;
  white-space: nowrap;
  flex: 1;
}

.btn-save {
  margin-top: 30px;
  width: calc(100% - 60rpx);
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: white;
  border-radius: 5px;
  background-color: #FF6D10;
}

.btn-delete {
  margin-top: 30px;
  width: calc(100% - 60rpx);
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border: 1px solid rgb(240, 240, 240);
  color: rgb(70, 70, 70);
  border-radius: 5px;
  background-color: rgb(252, 252, 252);
}
