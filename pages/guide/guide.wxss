/* pages/guide/guide.wxss */
@import "./poster/index.wxss";
.swiper{
  width: 100%;
  height: 100vh;
}
.dot-list{
  position: fixed;
  bottom: 90rpx;
  left: 0px;
  right: 0px;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
 
}
.dot{
  margin-left: 5px;
  width: 10px;
  height: 3px;
  border-radius: 1.5px;
  background-color: #EAEAEA;
}
.dot-active{
  margin-left: 5px;
  width: 10px;
  height: 3px;
  border-radius: 1.5px;
  background-color: #F06F28;
}

.btn--enter{
  position: fixed;
  bottom: 80rpx;
  left: calc(50% - 150rpx);
  height: 80rpx;
  line-height: 80rpx;
  width: 300rpx;
  color: white;
  text-align: center;
  border-radius: 4rpx;
}
.btn--enter:active{
  background: white;
}