/* pages/myAccount/myAccount.wxss */

.header{
  height: 349rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
   background:linear-gradient(right,#0F73EE,#C644FC);
  background: -moz-linear-gradient(right,#0F73EE,#C644FC);
  background:-webkit-linear-gradient(right,#0F73EE,#C644FC);
 
}


.header .title{
  margin-left: 63rpx;
 font-size:24rpx;
 font-weight:500;
 color:rgba(255,255,255,1);
 line-height:33px;
}
.header__bottom{
   margin-left: 63rpx;
  display: flex;
  align-items: flex-end;
  
}
.header__bottom__title{
 font-size:72rpx;
 font-weight:500;
 color:rgba(255,255,255,1);
 height: 100rpx;
 line-height: 100rpx;
}
.header__bottom__unit{
  margin-left: 17rpx;
  font-size: 24rpx;
  font-weight:500;
  color: white;
  margin-bottom: 16rpx;
}

.item{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
}
.item .icon{
  width: 25px;
  height: 25px;
  margin-left: 30rpx;

}
.item .title{
  margin-left: 30rpx;
  font-size: 32rpx;
  font-weight:500;
}
.arrow-right{
  margin-right: 10px;
  width: 15px;
  height: 15px;
}

.bottom{
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom .title{
  color: rgb(150,150,150);
  font-size: 13px;
}
.bottom .btn-return{
  color: #fc9f00;
  font-size: 13px;
  margin-left: 5px;
}

