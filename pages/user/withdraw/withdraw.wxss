/* pages/user/withdraw/withdraw.wxss */
.header{
  height: 349rpx;
  width: 100%;
   background:linear-gradient(right,#0F73EE,#C644FC);
  background: -moz-linear-gradient(right,#0F73EE,#C644FC);
  background:-webkit-linear-gradient(right,#0F73EE,#C644FC);
  display: flex;
  flex-direction: column;
}
.header__title{
  margin-top: 70rpx;
  margin-left: 55rpx;
  font-size:48rpx;
  font-weight:500;
  color: white;
}
.header__subtitle{
  margin-top: 24rpx;
  margin-left: 55rpx;
  font-size:24rpx;
  color: white;
}
.header__account{
  height: 100rpx;
  display: flex;
  align-items: flex-end;
  margin-left: 55rpx;
 
}
.header__account__num{
  font-size: 72rpx;
  color: white;
  font-weight: 500;
}
.header__account__unit{
  margin-left: 17rpx;
  font-size: 24rpx;
  margin-bottom: 16rpx;
  color: white;
}
.input{
  margin-top: 40rpx;
 display: flex;
 align-items: center;
 margin-left: 30rpx;
 margin-right: 30rpx;
 border-bottom: 1px solid #D8D8D8;
 height: 80rpx;
}
.input__unit{
 font-size: 36rpx;
}
.input__input{
  margin-left: 20rpx;
  flex:1;
  font-size: 40rpx;
  font-weight: 500;
}
.input__all{
  font-size: 24rpx;
  color: #9B9B9B;
}
.btn-withdraw{
  margin-top: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: calc(100% - 60rpx);
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 10rpx;
  background:linear-gradient(right,#0F73EE,#C644FC);
  background: -moz-linear-gradient(right,#0F73EE,#C644FC);
  background:-webkit-linear-gradient(right,#0F73EE,#C644FC);
  color: white;
}
.btn-withdraw--disable{
  opacity: 0.5;
}
.tip{
  margin-top: 20rpx;
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #9B9B9B;
}