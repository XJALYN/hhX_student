/* pages/recharge/recharge.wxss */
.recharge{
  top: 0px;
  bottom: 0px;
  position: fixed;
  left: 0px;
  right: 0px;
}
.title{
   margin-top: 35rpx;
   margin-left: 30rpx;
   color: #010101;
   font-size: 24rpx;
   font-weight:500;
}
.input{
  margin-top: 70rpx;
  display: flex;
  align-items: flex-end;
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: calc(100% - 60rpx);
  border-bottom: 1px solid #D8D8D8;
}
.input__title{
  font-size: 36rpx;
  color: #000000;
  margin-bottom: 16rpx;
}
.input__value{
  margin-left: 30rpx;
  font-size: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  
  }

.btn-recharge{
  margin-top: 30px;
  width: calc(100% - 60rpx);
  margin-left: 10px;
  height: 50px;
  color: white;
  line-height: 50px;
  text-align: center;
  border-radius: 10rpx;
  font-size: 36rpx;
  font-weight:500;
  background:linear-gradient(right,#0F73EE,#C644FC);
  background: -moz-linear-gradient(right,#0F73EE,#C644FC);
  background:-webkit-linear-gradient(right,#0F73EE,#C644FC);
}


.btn-recharge-disable{
 opacity: 0.5;
}