/* pages/bill/bill.wxss */
@import "./filter/index";
@import "./cell/index";
.bill{
   border-top: 1rpx solid rgb(240,240,240);
   width: 100%;
   display: flex;
   flex-direction: column;
   color: rgb(51,51,51);
}

.item{
  width: 100%;
  padding:10px 10px;
  display: flex;
  flex-direction: column;
 border-bottom: 1rpx solid rgb(240,240,240);
}
.item .top{
  width: calc(100% - 20px);
  display: flex;
  
}
.item .top .title{
  font-size: 34rpx;
}
.item .top .fee{
  font-size: 34rpx;
  font-weight: 500;
}
.item .mid{
  margin-top: 10px;
  font-size: 24rpx;
  color: rgb(100,100,100)
}
.item .date{
  margin-top: 10px;
  font-size: 24rpx;
  color: rgb(151,151,151);
}
