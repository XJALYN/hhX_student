/* pages/courseFilter/courseFilter.wxss */
.course-filter{
 width: 100%;
 display: flex;
 flex-direction: column;
 align-items: center;
}
.banner{
  width: 100%;
  height: 150px;
}
.list{
 
  width: calc(100% - 20px);
  flex-wrap: wrap;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.couse-item{
  margin-top: 10px;
  width: calc(33.33% - 10px);
  height: 200rpx;
  line-height:200rpx;
  text-align: center;
  background: rgb(251,159,0);
  color: white;
}
.couse--selected{
  background: red;
}

.top-tip{
  margin-top: 10px;
  font-size: 17px;
  color: rgb(50,50,50);
}
.btn-next{
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  color: white;
  background: rgb(251,159,0);
}

.btn-next:active{
  opacity: 0.5;
}