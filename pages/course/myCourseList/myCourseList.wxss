/* pages/course/course.wxss */
@import "./tabs/index";
@import "./cell/index";
.course{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.no-order{
  margin-top: 50px;
  color: rgb(150,150,150);
  font-size: 20px;
  text-align: center;
}
.group-title{
  
  padding-left: 20px;
  font-size: 23px;
  font-weight: 500;
  width: 100%;
  text-align: left;
  
}
.course .list{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.course .list .item{
  width: calc(100% - 30px);

  margin-top: 10px;
  display: flex;

  flex-direction: column;
  box-sizing: border-box;
  border: 1px solid rgb(240,240,240);
}
.course .list .item .top{
  margin-top: 10px;
  display: flex;
  align-items: center;
}
.course .list .item .top .avator{
  width:40px;
  height: 40px;
  background-color: rgb(200, 200, 200);
  border-radius: 20px;
  margin-left: 10px;
}
.course .list .item .top .username{
  margin-left: 10px;
}
.course .list .item .top .course-name{
  margin-left: 10px;
}
.course .list .item .bottom{
  width: 100%;
  text-align: center;
  height: 60px;
  line-height: 60px;
  font-size: 22px;
  font-weight: 500px;
}
.course-date{
  font-size: 12px;
  color: rgb(150,150,150);
  width: 100%;
  text-align: left;
  margin-left: 10px;
}
.btn-comment{
  height: 30px;
  width: 100%;
  text-align: center;
  line-height: 30px;
  border-top: 1px solid rgb(240,240,240);
  color: rgb(150,150,150);
  background-color: rgb(250,250,250);
  
}
