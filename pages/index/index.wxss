}


.btn-location{
  height: 44px;
  line-height: 44px;
  padding-left: 10px;
  padding-right: 10px;
  border-radius: 5px;
  text-align: center;
  margin-top: 30px;
  font-size: 15px;
  text-decoration: underline;
  color: rgb(150,150,150);
}





