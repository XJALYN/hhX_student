/* pages/help/help.wxss */
.item{
  display: flex;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  align-items: center;
  color: rgb(70,70,70);
}
.line{
  width: calc(100% - 60rpx);
  height: 1px;
  background-color: rgb(247,247,247);
}

.menu-list{
  width: 100%;
  display: flex;
  align-items: center;
  height: 100px;
  justify-content: center;

}
.arrow_right{
  width: 15px;
  height: 15px;
  margin-right: 20rpx;
  margin-left: 10rpx;
  
}



.menu-title{
  margin-left: 10px;
  font-size: 30rpx;
}
.menu-title-left{
  margin-left: 10px;
  color: red;
}
.menu-title-right{
  margin-left: 10px;
  color: rgb(255,108,25);
}

.menu-icon{
  width: 30px;
  height: 30px;
}

.item .title{
 font-size: 30rpx;
 margin-left: 30rpx;
 font-weight: bold;
}
.item .arrow_right{
  width: 15px;
  height: 15px;
  margin-right: 30rpx;
}
.item:active{
  background-color: rgb(240,240,240);
}

.add_wx{
  margin-top: 30px;
  margin-left: 30rpx;
  color: rgb(50,50,50);
  font-size: 30rpx;
}