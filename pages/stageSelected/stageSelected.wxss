/* pages/stageSelected/stageSelected.wxss */
.stage-selected{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.banner{
  width: calc(100% - 20px);
  height: 300rpx;
  border-radius: 6px;
}

.navigation-title{
 margin-top: 30px;
 font-size: 17px;
 color: rgb(50,50,50);
 text-align: center;
 font-weight: 500;
}
.stage-list{
  margin-top: 20px;
  width: calc(100% - 20px);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.stage-item{
  display: flex;
  flex-direction: column;
  width: calc(33% - 10px);
  height: 150px;
  justify-content: center;
  line-height: 150px;
  text-align: center;
  font-size: 18px;
  font-weight: bold;
   color: white;
   opacity: 0.5;
   border-radius: 2px;
}
.stage-item-selected{
  opacity: 1;
}
.stage-text{
  margin-top: 0px;
  height: 30px;
  line-height: 30px;
}
picker{
width: 100%;
}

.btn-confirm{
  position: fixed;
  bottom: 0px;
  height: 120rpx;
  left: 0px;
  right: 0px;
  line-height: 120rpx;
  text-align: center;
}
.btn-diable{
    position: fixed;
  bottom: 0px;
  height: 120rpx;
  left: 0px;
  right: 0px;
  line-height: 120rpx;
  text-align: center;
  background: rgb(200,200,200);
}
.btn-confirm:active{
 opacity: 0.7;
}