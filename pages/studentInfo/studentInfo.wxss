/* pages/studentInfo/studentInfo.wxss */

.item{
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgb(240,240,240);
  font-size: 15px;
}

.item .title{
  margin-left: 10px;
}

.item input{
  margin-left: 10px;
}
.item .value{
  margin-right: 10px;
  color: rgb(100,100,100);
}
.item .arrow-right{
  margin-right: 10px;
  width: 15px;
  height: 15px;
}

.group-item{
  margin-top: 20px;
  margin-left: 10px;

}
.list{
  margin-top: 10px;
  width: 100%;
  display: flex;
  flex-wrap: wrap;

}
.list .title{
  padding: 2px 5px;
  margin-left: 10px;
  margin-bottom: 10px;
  border-radius: 5px;
  background-color: rgb(250,250,250);
  border: rgb(200,200,200) 1px solid;
  font-size: 13px;
}
.list .title:active{
  background-color: rgb(230,230,230);
}
 .tip{
  margin-top: 30px;
  font-size: 12px;
  color: rgb(150,150,150);
  text-align: center;
}

.btn-next{
  position: fixed;
  bottom: 0px;
  right: 0px;
  left: 0px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  box-shadow: -5px 0px 5px rgba(0,0,0,0.2);
  background: rgb(252,159,0);
  color: white;
}
.btn-next:active{
  background: rgba(252,159,0,0.7);
}
