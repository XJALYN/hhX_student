@import "./cell/index";
.input-container{
  margin-top: 34rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: calc(100% - 60rpx);
  border-radius: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.1);
  height: 361rpx;
   padding-bottom: 30rpx;
   box-sizing: border-box;
}
.input-text{
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 260rpx;
  font-size: 24rpx;

}
.input-tag{
  min-height: 30rpx;
  text-align: right;
  width: calc(100% - 60rpx);
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: #9B9B9B;
  font-size: 20rpx;
  margin-bottom: 30rpx;
}

.tag-list{
  padding-top: 20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  height: 361rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: calc(100% - 60rpx);
  border-radius: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.1);
}





.btn-submit {
  width: 100%;
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-top: #D8D8D8 1px solid;
  font-size: 28rpx;
  color: #010101;

}
.btn-submit:active{
  opacity: 0.7;
}
