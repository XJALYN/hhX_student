/* pages/techerDetail/techerDetail.wxss */

@import "./header/index";
@import "./statistic/index";
@import "./resume/index";
@import "./subject/index";
@import "./order/index";
@import "./comment/index";
@import "./courseSelected/index";

.techer-detail{
  width: 100%;
  display: flex;
  flex-direction: column;
}






.line{
  width: calc(100% - 60rpx);
  background-color: rgb(241,241,241);
  height: 1px;
  margin-left: 30rpx;
}





.profile-container{
  border-bottom: 1px solid rgb(250, 250,250);

}

.comment-container{
  border-bottom: 1px solid rgb(250, 250,250);
  margin-bottom: 60px;

}



.profile-container .top{
   display: flex;
   flex-direction: row;
   align-items: center;
  
}
.arrow-right{
  width: 15px;
  height: 15px;
  margin-right: 10px;
}
.profile-container .top .count{
  font-size: 15px;
  color: rgb(170, 170, 170);
}

.group-title{
   margin-top: 10px;
   font-size: 36rpx;
   font-weight: bold;
   margin-left: 30rpx;
}


.group-content{
  margin-top: 10px;
  margin-left: 30rpx;
  color: rgb(100,100,100);
  font-size: 15px;
  width: calc(100 - 60rpx);
  margin-bottom: 10px;
}
.profile{
  text-indent:35px;
  letter-spacing:2px;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 10px;
  margin-right: 10px;
  font-size: 14px;
  color: rgb(100, 100, 100);
}


.list{
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}








