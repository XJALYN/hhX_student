/* pages/techerList/techerList.wxss */
@import "./teacherItem/index.wxss";
@import "./filterSubject/index";
@import "./header/index";
@import "./locationAuthor/index";

.header{
  position: absolute;
  top: 0px;
  width: 100%;
  display: flex;
  align-items: center;
  height: 40px;
  z-index: 100;
  background: white;
}

.header .location{
  width: 20px;
  height: 20px;
  margin-left: 10px;
}

.header  .address{
 font-size: 14px;
 margin-left: 10px;
}
.header .img-filter{
    width: 20px;
  height: 20px;
  margin-left: 10px;
}
.header .btn-filter{
  margin-left: 5px;
  margin-right: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: rgb(170,170,170);
  font-size: 15px;
}
.title{
  min-width: fit-content;
}
.arrow{
  width: 15px;
  height: 15px;
}
.subjects{
 
  padding: 0px 0px;
 
 display: flex;
 align-items: center;


}
.subject-item{
  padding: 0px 0px;
  font-size: 15px;
  color: rgb(100,100,100);
  min-width: 60px;
  text-align: center;
}
.subject-item-selected{
  font-weight: 500;
  color: rgb(255,55,0);
}
.condition{
  display: flex;
  height: 44px;
  align-items: center;
  flex-direction: row-reverse;
  padding-right: 15px;
  box-sizing: border-box;
}
.condition-btn{
 font-size: 15px;
 color: rgb(150,150,150);
 margin-right: 10px;
}
.condition-btn--active{
  font-size: 15px;
  color: rgb(50,50,50);
  margin-right: 10px;
}
.list{
  margin-top: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

block{
  width: 100%;
}




