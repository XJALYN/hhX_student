/* pages/complaintTeacher/complaintTeacher.wxss */

.complaint-teacher{
  display: flex;
  flex-direction: column;
  align-items: center;
}
textarea{
  margin-top: 30px;
  padding: 10px 10px;
  width: calc(100% - 20px);
  box-sizing: border-box;
  height: 200px;
  background-color: rgb(250,250,250);
  border-radius: 6px;
}
.btn-submit{
  margin-top: 30px;
  width: calc(100% - 20px);
  height: 40px;
  border-radius:6px;
  line-height: 40px;
  text-align: center;
  background: rgb(251,235,0);
}
.btn-submit:active{
  background: rgba(251,235,0,0.7);
}