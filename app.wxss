/**app.wxss**/
@import 'plugs/animate/animate.wxss';

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
} 


.btn-gradient-bg-color{
  background:linear-gradient(right,#FFA466,#EE3434);
  background: -moz-linear-gradient(right,#FFA466,#EE3434);
  background:-webkit-linear-gradient(right,#FFA466,#EE3434);
}

.line{
  width: calc(100% - 60rpx);
  height: 1px;
  background-color: rgb(247,247,247);
}

.line-fluid{
  width: 100%;
  height: 1px;
  background-color: rgb(247,247,247);
}

.row{
  display: flex;
}
.row-flex{
  flex:1;
  display: flex;
}

.row-fluid{
  display: flex;
  width: 100%;
  flex:1;
  box-sizing: border-box;
}

 .image-small{
  margin:5px 5px;
  width: 30px;
  height: 30px;
  min-width: 30px;
  min-height: 30px;
  box-shadow: 0px 0px 2px rgba(0,0,0,0.1);
}
 .image-circle{
  border-radius: 50%;
}

.container-fluid{
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  flex-direction: column;
  align-items: flex-start;

  width: 100%;
  display: flex;
}

.clear-padding{
  padding: 0px 0px;
}


.h6{
  font-size: 12px;
  padding: 5px 5px;
  color: black;
  min-width: fit-content;

}

.h5{
  font-size: 15px;
  padding: 5px 5px;
  color: black;
}
.h4{
  font-size: 17px;
  padding: 5px 5px;
  color: black;
}
.h3{
  font-size: 20px;
  padding: 5px 5px;
  color: black;
}
.h2{
  font-size: 22px;
  padding: 5px 5px;
  color: black;
}
.h1{
  font-size: 25px;
  padding: 5px 5px;
  color: black;
}

.text-bold{
  font-weight: 500;
}

.text-info{
  color: rgb(110,110,110);
}

.main-color{
  background-color: rgb(255,55,0);
}

.btn-hover{
  opacity: 0.7;
}
.assist-bg-color{
  background: rgb(255,134,0);
}
.main-text-color{
  color: white;
}
.course-name-color{
  color: rgb(0,142,255);
}

.btn-main-background-color{
  background-color: #00d690;
}




.btn-small{
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 2px;
  padding-bottom: 2px;
  font-size: 13px;
  border-radius: 5px;
  margin: 5px 5px;
}
.border-10{
  height: 20rpx;
  width: 100%;
  background-color: rgb(250,250,250);
}
.btn-md{
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 1px;
  padding-bottom: 1px;
  font-size: 17px;
   border-radius: 5px;
}

.btn-default{
  border:1px solid rgba(110,110,110,0.2);
  color: rgb(110,110,110);
}

.btn-success{
  color: rgb(110,110,110);
}

.btn-warning{
  color: rgb(255,55,0);
}

.btn-danger{
  background: rgb(255,55,0);
  color: white;
}


.flex{
  flex: 1;
}

.bg-disable{
  background-color: rgb(220,220,220);
}

.bg-info{
  background-color: rgba(255,158,83,0.5);
}


